<Page
    x:Class="Pomodoro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pomodoro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="timeBoard" HorizontalAlignment="Center" TextWrapping="Wrap" Text="25:00" VerticalAlignment="Center" FontFamily="Microsoft JhengHei UI Light" FontSize="100" Height="120" Width="250" TextAlignment="Center" Foreground="Red"/>
        <Button x:Name="StartStop" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartStop_Click" Margin="0,300,0,0"/>
        <Ellipse Fill="Red" Height="20"  VerticalAlignment="Top" Width="20" Margin="0,250,0,0" RenderTransformOrigin="0.346,0.343" HorizontalAlignment="Center" Visibility="Collapsed"/>

    </Grid>
</Page>
